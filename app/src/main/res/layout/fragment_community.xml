<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_FFD900"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.patshopclient.widgets.WPTShapeRelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="265dp"
            android:layout_height="32dp"
            app:rl_radius="55dp"
            app:rl_solidColor="@color/color_FFFFFF"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索话题 想法 用户"
                android:textColor="@color/color_AAAAAA"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_marginLeft="10dp"/>

        </com.example.patshopclient.widgets.WPTShapeRelativeLayout>

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_email"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hot_topic"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rl_participate_topic">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_participate_topic"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_bar"
        app:layout_constraintLeft_toRightOf="@+id/rl_hot_topic"
        app:layout_constraintRight_toLeftOf="@+id/rl_initiate_topic">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_initiate_topic"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_bar"
        app:layout_constraintLeft_toRightOf="@+id/rl_participate_topic"
        app:layout_constraintRight_toLeftOf="@+id/rl_mine_topic">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_topic"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_bar"
        app:layout_constraintLeft_toRightOf="@+id/rl_initiate_topic"
        app:layout_constraintRight_toRightOf="parent">


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>